package client;

import javax.swing.JOptionPane;

import domain.Estenso;

public class MainClass {
	
	private static Estenso num;
	private static String entrada;
	private static String saida;

	public static void main(String[] args) {
		num = new Estenso();
		int val = 0;
		while (val >= 0 && val <= 100) {
			entrada = JOptionPane.showInputDialog("Digite um núm. inteiro entre 0 e 100 para escrevêlo ou maior que 100 para sair:");
			try {
				val = Integer.parseInt(entrada);
			}catch(Exception e){
				val = 101;
			}
			saida = num.getValor(val);
			saida.replaceFirst("z", "s");
			System.out.println(saida);
		}

	}

}
